<?xml version="1.0"?>
<tool name="RhizoBase Genes" id="rhizobase_genes">
	<description> table browser</description>
	<command interpreter='ruby'>
	  microbe_base.rb cyanobase $dsn $output
	</command>
	<inputs>
          <param name="dsn" type="select">
            <label>Data Source Name</label>
            <option value="Mesorhizobium">Mesorhizobium loti MAFF303099</option>
          </param>
          <param name="gene_name" type="text">
            <label>Gene Name/Symbol</label>
          </param>
	</inputs>
	<outputs>
          <data name="output" format="tabular" />
	</outputs>
        <help>
RhizoBase the Genome Database for Rhizobia, http://genome.kazusa.or.jp/rhizobase, 
</help>
</tool>
